---
const gradientId1 = `gradient-${Math.random().toString(36).substr(2, 9)}`;
const gradientId2 = `gradient-${Math.random().toString(36).substr(2, 9)}`;
const gradientId3 = `gradient-${Math.random().toString(36).substr(2, 9)}`;
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	xmlns:xlink="http://www.w3.org/1999/xlink"
	viewBox="0 0 94.93 36.73"
>
	<defs>
		<linearGradient
			id={gradientId1}
			x1="0"
			y1="32.68"
			x2="8.11"
			y2="32.68"
			gradientUnits="userSpaceOnUse"
		>
			<stop offset="0" stop-color="#f7b9d4"></stop>
			<stop offset=".11" stop-color="#ecb9d4"></stop>
			<stop offset=".31" stop-color="#d1bbd5"></stop>
			<stop offset=".56" stop-color="#a4bed6"></stop>
			<stop offset=".86" stop-color="#67c3d8"></stop>
			<stop offset=".99" stop-color="#4bc5d9"></stop>
		</linearGradient>
		<linearGradient
			id={gradientId2}
			x1="26.71"
			y1="20.75"
			x2="40.55"
			y2="20.75"
			gradientUnits="userSpaceOnUse"
		>
			<stop offset="0" stop-color="#f7b9d4"></stop>
			<stop offset=".11" stop-color="#ecb9d4"></stop>
			<stop offset=".31" stop-color="#d1bbd5"></stop>
			<stop offset=".56" stop-color="#a4bed6"></stop>
			<stop offset=".86" stop-color="#67c3d8"></stop>
			<stop offset=".99" stop-color="#4bc5d9"></stop>
		</linearGradient>
		<linearGradient
			id={gradientId3}
			x1="76.32"
			y1="9.3"
			x2="94.93"
			y2="9.3"
			gradientUnits="userSpaceOnUse"
		>
			<stop offset="0" stop-color="#f7b9d4"></stop>
			<stop offset=".11" stop-color="#ecb9d4"></stop>
			<stop offset=".31" stop-color="#d1bbd5"></stop>
			<stop offset=".56" stop-color="#a4bed6"></stop>
			<stop offset=".86" stop-color="#67c3d8"></stop>
			<stop offset=".99" stop-color="#4bc5d9"></stop>
		</linearGradient>
	</defs>
	<g style="opacity: 0.5">
		<circle fill={`url(#${gradientId1})`} cx="4.05" cy="32.68" r="4.05"
		></circle>
		<circle fill={`url(#${gradientId2})`} cx="33.63" cy="20.75" r="6.92"
		></circle>
		<circle fill={`url(#${gradientId3})`} cx="85.63" cy="9.3" r="9.3"></circle>
	</g>
</svg>
